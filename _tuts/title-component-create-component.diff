+<script>
+export default {
+    name: 'Title',
+    props: {
+        currentCategoryId: {
+            type: Number,
+            default: null,
+        },
+        categories: {
+            type: Array,
+            default: () => ([]),
+        },
+    },
+    computed: {
+        category() {
+            if (this.currentCategoryId === null) {
+                return {
+                    id: null,
+                    name: 'All Products',
+                };
+            }
+
+            return this.categories.find((cat) => (cat.id === this.currentCategoryId));
+        },
+    },
+};
