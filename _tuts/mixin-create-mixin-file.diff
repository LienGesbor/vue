+const collapsible = {
+    data: () => ({
+        sidebarCollapsed: false,
+    }),
+    computed: {
+        asideClass() {
+            return this.sidebarCollapsed ? 'aside-collapsed' : 'col-xs-12 col-lg-3';
+        },
+        contentClass() {
+            return this.sidebarCollapsed ? 'col-xs-12 col-lg-11' : 'col-xs-12 col-lg-9';
