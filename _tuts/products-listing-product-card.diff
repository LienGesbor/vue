+            <small>brought to you by </small>
+
+            <small
+                class="d-inline"
+                v-text="item.brand"
+            />
+        </div>
+    </div>
+</template>
+
+<script>
+export default {
+    name: 'ProductCard',
+    props: {
+        item: {
+            type: Object,
+            required: true,
+        },
+    },
+    computed: {
+        /**
+         * Returns a formatted price for the product
+         * @returns {string}
+         */
+        price() {
+            const strPrice = this.item.price.toString();
+            return `${strPrice.substr(0, strPrice.length - 2)}.${strPrice.substr(-2)}`;
+        },
+    },
+};
+</script>
